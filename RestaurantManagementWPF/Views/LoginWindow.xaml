<Window x:Class="RestaurantManagementWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestaurantManagementWPF.ViewModels"
        mc:Ignorable="d"
        Title="Dang nhap - Restaurant Management" 
        Height="650" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2"
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Loading..." 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center" 
                    Margin="40,20,40,20">

            <!-- Logo/Icon -->
            <Border Width="100" Height="100" 
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="50"
                    Margin="0,0,0,30">
                <Viewbox Width="60" Height="60">
                    <TextBlock Text="&#127860;" FontSize="48"/>
                </Viewbox>
            </Border>

            <!-- Title -->
            <TextBlock Text="Restaurant Management" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#333333"
                       Margin="0,0,0,8"/>

            <TextBlock Text="Login System" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Foreground="#666666"
                       Margin="0,0,0,40"/>

            <!-- Username Field -->
            <TextBlock Text="Username" 
                       FontSize="14" 
                       Foreground="#333333"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="UsernameTextBox"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBox}"
                     FontSize="14"
                     Margin="0,0,0,20"/>

            <!-- Password Field -->
            <TextBlock Text="Password" 
                       FontSize="14" 
                       Foreground="#333333"
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox"
                         PasswordChanged="PasswordBox_PasswordChanged"
                         Style="{StaticResource ModernPasswordBox}"
                         FontSize="14"
                         Margin="0,0,0,30"/>

            <!-- Buttons Row -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Login Button -->
                <Button Grid.Column="0"
                        Content="LOGIN"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource PrimaryButton}"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Height="45"/>

                <!-- Exit Button -->
                <Button Grid.Column="2"
                        Content="EXIT"
                        Command="{Binding ExitCommand}"
                        Style="{StaticResource SecondaryButton}"
                        FontSize="14"
                        Height="45"/>
            </Grid>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                Padding="20,15">
            <TextBlock Text="2025 Restaurant Management System v1.0" 
                       FontSize="12" 
                       Foreground="#999999"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
