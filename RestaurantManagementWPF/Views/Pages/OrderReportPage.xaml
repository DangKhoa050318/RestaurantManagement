<Page x:Class="RestaurantManagementWPF.Views.Pages.OrderReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:RestaurantManagementWPF.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Order Report"
      Background="White">

    <Page.DataContext>
        <vm:OrderReportViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" 
                   Text="Order Report" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,20"/>

        <!-- Filter Section -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Start Date -->
                <TextBlock Grid.Column="0" 
                           Text="From:" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <DatePicker Grid.Column="1"
                            SelectedDate="{Binding StartDate, Mode=TwoWay}"
                            FontSize="14"
                            Padding="8"/>

                <!-- End Date -->
                <TextBlock Grid.Column="3" 
                           Text="To:" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <DatePicker Grid.Column="4"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}"
                            FontSize="14"
                            Padding="8"/>

                <!-- Buttons -->
                <StackPanel Grid.Column="6" 
                            Orientation="Horizontal">
                    <Button Content="Search"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="15,8"
                            Margin="0,0,10,0"/>
                    <Button Content="Reset"
                            Command="{Binding ResetCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Padding="15,8"/>
                </StackPanel>

                <!-- Summary -->
                <StackPanel Grid.Column="7" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Total Orders: " 
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalOrders}" 
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               VerticalAlignment="Center"
                               Margin="5,0,20,0"/>
                    
                    <TextBlock Text="Total Revenue: " 
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <TextBlock FontSize="14"
                               FontWeight="Bold"
                               Foreground="#4CAF50"
                               VerticalAlignment="Center">
                        <Run Text="{Binding TotalRevenue, StringFormat='{}{0:N0}'}"/>
                        <Run Text=" VND"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Orders DataGrid -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8">
            <DataGrid ItemsSource="{Binding Orders}"
                      SelectedItem="{Binding SelectedOrder}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      AlternatingRowBackground="#F9F9F9"
                      RowHeight="40"
                      FontSize="13">
                
                <DataGrid.Columns>
                    <!-- Order ID -->
                    <DataGridTextColumn Header="Order ID" 
                                        Binding="{Binding OrderId}"
                                        Width="80"
                                        HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    
                    <!-- Table -->
                    <DataGridTextColumn Header="Table" 
                                        Binding="{Binding TableName}"
                                        Width="100"
                                        HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    
                    <!-- Area -->
                    <DataGridTextColumn Header="Area" 
                                        Binding="{Binding AreaName}"
                                        Width="120"
                                        HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    
                    <!-- Customer -->
                    <DataGridTextColumn Header="Customer" 
                                        Binding="{Binding CustomerName}"
                                        Width="150"
                                        HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    
                    <!-- Order Time -->
                    <DataGridTextColumn Header="Order Time" 
                                        Binding="{Binding OrderTime, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                        Width="140"
                                        HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    
                    <!-- Payment Time -->
                    <DataGridTextColumn Header="Payment Time" 
                                        Binding="{Binding PaymentTime, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                        Width="140"
                                        HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    
                    <!-- Status -->
                    <DataGridTemplateColumn Header="Status" 
                                            Width="100"
                                            HeaderStyle="{StaticResource DataGridHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding StatusColor}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Status}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Total Amount -->
                    <DataGridTextColumn Header="Total Amount" 
                                        Binding="{Binding TotalAmount, StringFormat='{}{0:N0} VND'}"
                                        Width="130"
                                        HeaderStyle="{StaticResource DataGridHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" 
                                            Width="*"
                                            HeaderStyle="{StaticResource DataGridHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View Details"
                                        Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SecondaryButton}"
                                        FontSize="11"
                                        Padding="10,5"
                                        Width="100"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Empty State -->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Orders.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <TextBlock Text="??" 
                       FontSize="48"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="No orders found"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#999999"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Try adjusting your date range or click Search"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
