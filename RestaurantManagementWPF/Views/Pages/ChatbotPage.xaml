<Page x:Class="RestaurantManagementWPF.Views.Pages.ChatbotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:RestaurantManagementWPF.ViewModels"
      mc:Ignorable="d"
      Title="Restaurant Assistant Chatbot"
      Background="#F8F9FA">

    <Page.DataContext>
        <vm:ChatbotViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bot Avatar -->
                <Border Grid.Column="0"
                        Width="50"
                        Height="50"
                        CornerRadius="25"
                        Background="{StaticResource PrimaryBrush}"
                        VerticalAlignment="Center">
                    <TextBlock Text="🤖"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Restaurant Assistant Chatbot"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333333"/>
                    <TextBlock Text="Hỏi tôi về thực đơn, bàn, đơn hàng, hoặc món ăn bán chạy..."
                               FontSize="13"
                               Foreground="#666666"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Status Indicator -->
                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Ellipse Width="10"
                             Height="10"
                             Fill="#28A745"
                             Margin="0,0,8,0"/>
                    <TextBlock Text="Online"
                               FontSize="13"
                               Foreground="#28A745"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chat Messages Area -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <!-- Watermark when no messages -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Opacity="0.3">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Messages.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="💬"
                               FontSize="64"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Chưa có tin nhắn"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#999999"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Hãy bắt đầu cuộc trò chuyện!"
                               FontSize="14"
                               Foreground="#CCCCCC"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Messages List -->
                <ScrollViewer x:Name="ChatScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              Padding="20">
                    <ItemsControl x:Name="ChatMessagesControl"
                                  ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8">
                                    <!-- User Message (Right) -->
                                    <Border Background="{StaticResource PrimaryBrush}"
                                            CornerRadius="16,16,0,16"
                                            Padding="15,10"
                                            MaxWidth="500"
                                            HorizontalAlignment="Right"
                                            Margin="80,0,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" 
                                                              BlurRadius="5" 
                                                              ShadowDepth="1" 
                                                              Opacity="0.15"/>
                                        </Border.Effect>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUserMessage}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}"
                                                       Foreground="White"
                                                       FontSize="14"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}"
                                                       FontSize="10"
                                                       Foreground="#E0E0E0"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Bot Message (Left) -->
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="16,16,16,0"
                                            Padding="15,10"
                                            MaxWidth="500"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,80,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" 
                                                              BlurRadius="5" 
                                                              ShadowDepth="1" 
                                                              Opacity="0.1"/>
                                        </Border.Effect>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUserMessage}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}"
                                                       Foreground="#333333"
                                                       FontSize="14"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}"
                                                       FontSize="10"
                                                       Foreground="#999999"
                                                       HorizontalAlignment="Left"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Input Area -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message Input -->
                <TextBox x:Name="MessageInput"
                         Grid.Column="0"
                         Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         VerticalAlignment="Center"
                         Padding="15,12"
                         FontSize="14"
                         BorderBrush="#D0D0D0"
                         KeyDown="MessageInput_KeyDown">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Send Button -->
                <Button Grid.Column="1"
                        Command="{Binding SendMessageCommand}"
                        Width="55"
                        Height="55"
                        Margin="10,0,0,0"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="8" 
                                          ShadowDepth="2" 
                                          Opacity="0.2"/>
                    </Button.Effect>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="27.5">
                                <Grid>
                                    <TextBlock Text="➤"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="2,0,0,0"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding IsSending}" Value="True">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>