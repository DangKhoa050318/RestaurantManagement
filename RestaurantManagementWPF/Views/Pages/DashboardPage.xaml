<Page x:Class="RestaurantManagementWPF.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:RestaurantManagementWPF.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Dashboard"
      Background="White">

    <Page.DataContext>
        <vm:DashboardViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Loading statistics..." 
                           Foreground="#666666" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4"
                             Foreground="{StaticResource PrimaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Page Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Dashboard" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="#333333"/>
            <TextBlock Text="Welcome to Restaurant Management System" 
                       FontSize="14"
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Tables Card -->
            <Border Grid.Column="0"
                    Background="#E3F2FD"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="&#128444;" 
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Total Tables" 
                               FontSize="14"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalTables}" 
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#007ACC"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Available Tables Card -->
            <Border Grid.Column="2"
                    Background="#E8F5E9"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="&#9989;" 
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Available" 
                               FontSize="14"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding AvailableTables}" 
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#28A745"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Active Orders Card -->
            <Border Grid.Column="4"
                    Background="#FFF3E0"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="&#128221;" 
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Active Orders" 
                               FontSize="14"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ActiveOrders}" 
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#FF9800"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Total Dishes Card -->
            <Border Grid.Column="6"
                    Background="#FCE4EC"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="&#127860;" 
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Total Dishes" 
                               FontSize="14"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalDishes}" 
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#E91E63"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Quick Actions -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Quick Actions" 
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,20"/>

            <WrapPanel>
                <Button Content="New Order"
                        Style="{StaticResource PrimaryButton}"
                        Padding="30,15"
                        Margin="0,0,15,15"
                        FontSize="16"
                        Command="{Binding NavigateToPOSCommand}"/>
                
                <Button Content="Manage Tables"
                        Style="{StaticResource SecondaryButton}"
                        Padding="30,15"
                        Margin="0,0,15,15"
                        FontSize="16"
                        Command="{Binding NavigateToAreaCommand}"/>
                
                <Button Content="Manage Dishes"
                        Style="{StaticResource SuccessButton}"
                        Padding="30,15"
                        Margin="0,0,15,15"
                        FontSize="16"
                        Command="{Binding NavigateToDishCommand}"/>
                
                <Button Content="View Reports"
                        Style="{StaticResource SecondaryButton}"
                        Padding="30,15"
                        Margin="0,0,15,15"
                        FontSize="16"
                        Command="{Binding NavigateToReportCommand}"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
