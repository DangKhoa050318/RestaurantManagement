<Window x:Class="RestaurantManagementWPF.Views.AdminShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestaurantManagementWPF.ViewModels"
        mc:Ignorable="d"
        Title="Restaurant Management System" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.DataContext>
        <vm:AdminShellViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}"
                Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <TextBlock Text="&#127860;" 
                               FontSize="28"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Restaurant Management" 
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- User Info & Logout -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <TextBlock Text="Welcome, " 
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUsername}" 
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <Button Content="LOGOUT"
                            Command="{Binding LogoutCommand}"
                            Background="#DC3545"
                            Foreground="White"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Padding="15,8"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DC3545"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C82333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Menu -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">
                    
                    <!-- Dashboard -->
                    <Button Command="{Binding NavigateCommand}"
                            CommandParameter="Dashboard"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128200;" FontSize="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Dashboard" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- POS / Order -->
                    <Button Command="{Binding NavigateCommand}"
                            CommandParameter="POS"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128179;" FontSize="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Point of Sale" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Area Management -->
                    <Button Command="{Binding NavigateCommand}"
                            CommandParameter="Area"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#127970;" FontSize="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Area Management" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Dish Management -->
                    <Button Command="{Binding NavigateCommand}"
                            CommandParameter="Dish"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#127860;" FontSize="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Dish Management" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Category Management -->
                    <Button Command="{Binding NavigateCommand}"
                            CommandParameter="Category"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128193;" FontSize="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Category" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Customer Management -->
                    <Button Command="{Binding NavigateCommand}"
                            CommandParameter="Customer"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128100;" FontSize="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Customer" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Order Report -->
                    <Button Command="{Binding NavigateCommand}"
                            CommandParameter="Report"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128202;" FontSize="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Order Report" FontSize="14"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>

            <!-- Right Content - Navigation Frame -->
            <Border Grid.Column="1"
                    Background="White"
                    Margin="10">
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       Background="Transparent"/>
            </Border>
        </Grid>
    </Grid>
</Window>
