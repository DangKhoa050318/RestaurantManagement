<Window x:Class="RestaurantManagementWPF.Views.Dialogs.AddTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add New Table" 
        Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Add New Table" 
                       FontSize="22" 
                       FontWeight="Bold"
                       Foreground="#333333"/>
            <TextBlock Text="Enter table information below" 
                       FontSize="13"
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <!-- Area -->
            <TextBlock Text="Area: *" 
                       FontSize="13" 
                       Foreground="#333333"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Areas}"
                      SelectedItem="{Binding SelectedArea}"
                      DisplayMemberPath="AreaName"
                      FontSize="14"
                      Padding="10,8"
                      Margin="0,0,0,15"/>

            <!-- Mode Selection -->
            <Border Background="#F5F5F5"
                    Padding="15"
                    CornerRadius="8"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Add Mode:" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,10"/>
                    
                    <RadioButton Content="Add single table"
                                 IsChecked="{Binding IsSingleMode}"
                                 FontSize="13"
                                 Foreground="#333333"
                                 Margin="0,0,0,8"/>
                    
                    <RadioButton Content="Add multiple tables at once"
                                 IsChecked="{Binding IsMultipleMode}"
                                 FontSize="13"
                                 Foreground="#333333"/>
                </StackPanel>
            </Border>

            <!-- Single Mode Fields -->
            <StackPanel Visibility="{Binding IsSingleMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <!-- Table Name -->
                <TextBlock Text="Table Name: *" 
                           FontSize="13" 
                           Foreground="#333333"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding TableName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         FontSize="14"
                         Padding="10,8"
                         Margin="0,0,0,15"/>
                <TextBlock Text="Example: A01, B02, VIP01"
                           FontSize="11"
                           Foreground="#999999"
                           Margin="0,-10,0,15"/>

                <!-- Status -->
                <TextBlock Text="Initial Status:" 
                           FontSize="13" 
                           Foreground="#333333"
                           Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Statuses}"
                          SelectedItem="{Binding SelectedStatus}"
                          FontSize="14"
                          Padding="10,8"/>
            </StackPanel>

            <!-- Multiple Mode Fields -->
            <StackPanel Visibility="{Binding IsMultipleMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <!-- Number of Tables -->
                <TextBlock Text="Number of Tables: *" 
                           FontSize="13" 
                           Foreground="#333333"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding NumberOfTables, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         FontSize="14"
                         Padding="10,8"
                         Margin="0,0,0,5"/>
                <TextBlock Text="Tables will be named: Table 01, Table 02, Table 03..."
                           FontSize="11"
                           Foreground="#999999"
                           Margin="0,0,0,15"/>

                <!-- Initial Status for all -->
                <TextBlock Text="Initial Status for all tables:" 
                           FontSize="13" 
                           Foreground="#333333"
                           Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Statuses}"
                          SelectedItem="{Binding SelectedStatus}"
                          FontSize="14"
                          Padding="10,8"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButton}"
                    FontSize="14"
                    Padding="15,10"
                    Height="40"/>

            <Button Grid.Column="2"
                    Content="Save Table(s)"
                    Command="{Binding OKCommand}"
                    Style="{StaticResource PrimaryButton}"
                    FontSize="14"
                    Padding="15,10"
                    Height="40"/>
        </Grid>
    </Grid>
</Window>
