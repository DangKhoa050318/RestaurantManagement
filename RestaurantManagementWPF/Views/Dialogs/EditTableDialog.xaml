<Window x:Class="RestaurantManagementWPF.Views.Dialogs.EditTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Table" 
        Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Edit Table" 
                       FontSize="22" 
                       FontWeight="Bold"
                       Foreground="#333333"/>
            <TextBlock Text="Update table information below" 
                       FontSize="13"
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <!-- Area -->
            <TextBlock Text="Area: *" 
                       FontSize="13" 
                       Foreground="#333333"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Areas}"
                      SelectedItem="{Binding SelectedArea}"
                      DisplayMemberPath="AreaName"
                      FontSize="14"
                      Padding="10,8"
                      Margin="0,0,0,15"/>

            <!-- Table Name -->
            <TextBlock Text="Table Name: *" 
                       FontSize="13" 
                       Foreground="#333333"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding TableName, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBox}"
                     FontSize="14"
                     Padding="10,8"
                     Margin="0,0,0,15"/>

            <!-- Status -->
            <TextBlock Text="Status:" 
                       FontSize="13" 
                       Foreground="#333333"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Statuses}"
                      SelectedItem="{Binding SelectedStatus}"
                      FontSize="14"
                      Padding="10,8"
                      Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButton}"
                    FontSize="14"
                    Padding="15,10"
                    Height="40"/>

            <Button Grid.Column="2"
                    Content="Update Table"
                    Command="{Binding OKCommand}"
                    Style="{StaticResource PrimaryButton}"
                    FontSize="14"
                    Padding="15,10"
                    Height="40"/>
        </Grid>
    </Grid>
</Window>
