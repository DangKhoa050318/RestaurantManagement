<Window x:Class="RestaurantManagementWPF.Views.Dialogs.EditDishDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Dish" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Edit Dish" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#333333"/>
            <TextBlock Text="Modify dish information" 
                       FontSize="13"
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,-10,0"
                      Padding="0,0,10,0">
            <StackPanel>
                
                <!-- Dish ID (Read-only) -->
                <TextBlock Text="Dish ID" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding DishId, Mode=OneWay}"
                         Style="{StaticResource ModernTextBox}"
                         FontSize="14"
                         IsReadOnly="True"
                         Background="#F5F5F5"
                         Margin="0,0,0,20"/>

                <!-- Dish Name -->
                <TextBlock Text="Dish Name *" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding DishName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         FontSize="14"
                         Margin="0,0,0,20"
                         x:Name="DishNameTextBox"/>

                <!-- Category -->
                <TextBlock Text="Category *" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,8"/>
                <ComboBox ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Name"
                          FontSize="14"
                          Padding="10,8"
                          Margin="0,0,0,20"/>

                <!-- Price & Unit Row -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Price -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Price (VND) *" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 FontSize="14"/>
                    </StackPanel>

                    <!-- Unit of Calculation -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Unit *" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Units}"
                                  SelectedItem="{Binding SelectedUnit}"
                                  FontSize="14"
                                  Padding="10,8"/>
                    </StackPanel>
                </Grid>

                <!-- Description -->
                <TextBlock Text="Description (Optional)" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         FontSize="14"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="100"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,20"/>

                <!-- Image URL -->
                <TextBlock Text="Image URL (Optional)" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding ImageUrl, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         FontSize="14"
                         Margin="0,0,0,10"/>
                <TextBlock Text="Example: images/dish-name.jpg" 
                           FontSize="12"
                           Foreground="#999999"
                           FontStyle="Italic"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="SAVE"
                    Command="{Binding OKCommand}"
                    Style="{StaticResource PrimaryButton}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Height="45"/>

            <Button Grid.Column="2"
                    Content="CANCEL"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButton}"
                    FontSize="14"
                    Height="45"/>
        </Grid>
    </Grid>
</Window>
